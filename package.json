{
    "name": "sky",
    "version": "0.0.0",
    "description": "HTTP requests with fetch made easy",
    "homepage": "https://github.com/sholladay/sky",
    "main": "index.js",
    "type": "module",
    "author": {
        "name": "Seth Holladay",
        "url": "https://seth-holladay.com",
        "email": "me@seth-holladay.com"
    },
    "scripts": {
        "build": "esbuild index.js global.js --bundle --charset=utf8 --format=esm --minify --outdir=build --sourcemap",
        "debug": "PWDEBUG=1 ava --timeout=3m",
        "dev": "esbuild index.js global.js --bundle --charset=utf8 --format=esm --outdir=build --sourcemap --watch",
        "test": "npm run build && xo && ava"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:sholladay/sky.git"
    },
    "bugs": {
        "url": "https://github.com/sholladay/sky/issues",
        "email": "me@seth-holladay.com"
    },
    "engines": {
        "node": ">=22"
    },
    "license": "MPL-2.0",
    "files": [
        "index.js"
    ],
    "dependencies": {
        "is-network-error": "^1.1.0",
        "p-retry": "^6.2.1"
    },
    "devDependencies": {
        "@hapi/hapi": "^21.4.0",
        "@playwright/browser-chromium": "^1.51.1",
        "@playwright/browser-firefox": "^1.51.1",
        "@playwright/browser-webkit": "^1.51.1",
        "ava": "^6.2.0",
        "esbuild": "^0.25.2",
        "eslint-config-tidy": "^0.14.0",
        "joi": "^17.13.3",
        "playwright": "^1.51.1",
        "xo": "^0.60.0"
    },
    "keywords": [
        "fetch",
        "HTTP",
        "request",
        "client",
        "server",
        "network",
        "REST",
        "API"
    ],
    "xo": {
        "extend": "tidy",
        "rules": {
            "no-param-reassign": "off",
            "no-undefined": "off"
        }
    }
}
